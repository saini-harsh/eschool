{
  "info": {
    "name": "Teacher Routine API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Sections By Class",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"class_id\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/Teacher/Academic/Routine/SectionsByClass",
          "host": ["{{base_url}}"],
          "path": ["api", "Teacher", "Academic", "Routine", "SectionsByClass"]
        }
      }
    },
    {
      "name": "Class Routine Report",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"class_id\": 1,\n  \"section_id\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/Teacher/Academic/Routine/ClassRoutineReport",
          "host": ["{{base_url}}"],
          "path": ["api", "Teacher", "Academic", "Routine", "ClassRoutineReport"]
        }
      }
    }
  ]
}

