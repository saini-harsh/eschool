{
  "info": {
    "name": "Teacher Attendance Management API",
    "description": "Postman collection for Teacher Dashboard Attendance Management APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Attendance Data",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"class_id\": 1,\n  \"section_id\": 1,\n  \"date\": \"2025-01-15\",\n  \"status\": \"present\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/Teacher/Academic/Attendance/GetAttendanceData",
          "host": ["{{base_url}}"],
          "path": ["api", "Teacher", "Academic", "Attendance", "GetAttendanceData"]
        },
        "description": "Get filtered attendance data with optional parameters. You can filter by class, section, date, date range, status, or specific student."
      }
    },
    {
      "name": "Get Class Section Attendance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"class_id\": 1,\n  \"section_id\": 1,\n  \"date\": \"2025-01-15\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/Teacher/Academic/Attendance/GetClassSectionAttendance",
          "host": ["{{base_url}}"],
          "path": ["api", "Teacher", "Academic", "Attendance", "GetClassSectionAttendance"]
        },
        "description": "Get attendance for a specific class and section on a given date. Returns student list with their current attendance status."
      }
    },
    {
      "name": "Mark Attendance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"class_id\": 1,\n  \"section_id\": 1,\n  \"date\": \"2025-01-15\",\n  \"attendance\": [\n    {\n      \"student_id\": 101,\n      \"status\": \"present\",\n      \"remarks\": \"On time\"\n    },\n    {\n      \"student_id\": 102,\n      \"status\": \"absent\",\n      \"remarks\": \"Sick leave\"\n    },\n    {\n      \"student_id\": 103,\n      \"status\": \"late\",\n      \"remarks\": \"Traffic\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/Teacher/Academic/Attendance/MarkAttendance",
          "host": ["{{base_url}}"],
          "path": ["api", "Teacher", "Academic", "Attendance", "MarkAttendance"]
        },
        "description": "Mark or update attendance for students in a class. Supports bulk attendance marking with status (present, absent, late) and optional remarks."
      }
    },
    {
      "name": "Get Attendance Summary",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"teacher@example.com\",\n  \"class_id\": 1,\n  \"section_id\": 1,\n  \"start_date\": \"2025-01-01\",\n  \"end_date\": \"2025-01-31\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/Teacher/Academic/Attendance/GetAttendanceSummary",
          "host": ["{{base_url}}"],
          "path": ["api", "Teacher", "Academic", "Attendance", "GetAttendanceSummary"]
        },
        "description": "Get detailed attendance statistics and summary. Returns overall statistics and breakdowns by class, section, and date."
      }
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Add authentication token if available",
          "if (pm.environment.get('auth_token')) {",
          "    pm.request.headers.add({",
          "        key: 'Authorization',",
          "        value: 'Bearer ' + pm.environment.get('auth_token')",
          "    });",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost",
      "type": "string"
    }
  ]
}